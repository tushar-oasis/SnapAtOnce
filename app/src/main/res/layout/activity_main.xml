<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:baselineAligned="false">

    <ImageView android:id="@+id/switching_camera_black_screen"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@color/black"
               android:visibility="gone"/>

    <RelativeLayout android:id="@+id/capture_container_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:orientation="vertical">


        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/black">

            <FrameLayout
                android:id="@+id/camera_preview_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:backgroundTint="@color/black"/>

        </FrameLayout>

        <!--<RelativeLayout android:id="@+id/back_soft_button"-->
                        <!--android:layout_width="24dp"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:layout_alignParentTop="true"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_marginTop="12dp"-->
                        <!--android:layout_marginRight="24dp"-->
                        <!--android:background="@drawable/background_switch_cam">-->

            <!--<ImageView-->
                <!--android:layout_width="11dp"-->
                <!--android:layout_height="11dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:src="@drawable/cross_btn"/>-->

        <!--</RelativeLayout>-->

        <ImageView android:id="@+id/flash"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="38dp"
                   android:layout_marginLeft="24dp"
                   android:src="@drawable/ic_flash_auto"/>


        <LinearLayout android:id="@+id/capture_container"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="64dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageView android:id="@+id/capture"
                       android:layout_width="75dp"
                       android:layout_height="75dp"
                       android:background="@drawable/ic_capture"/>
        </LinearLayout>



        <RelativeLayout android:id="@+id/switch_camera_container"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="38dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/background_switch_cam">

            <ImageView android:id="@+id/switch_camera_button"
                       android:layout_width="11dp"
                       android:layout_height="11dp"
                       android:layout_centerInParent="true"
                       android:src="@drawable/ic_switch_cam"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/import_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AA000000"
                    android:visibility="invisible">
    </RelativeLayout>

</RelativeLayout>